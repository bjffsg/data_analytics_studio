<div id="timeline" class="target detail-panel" >
  <div class="row">
    <div class="col-md-12">
      <div class="title">Timeline - A</div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="body">
          {{#if perf1}}
            {{query-timeline-diff perf=perf1 perf1=perf2 hideTableLegend=true}}
          {{else}}
            <h4>Data not available to display Timeline!</h4>
          {{/if}}
       </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="title">Timeline - B</div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="body">
          {{#if perf2}}
            {{query-timeline-diff perf=perf2 perf1=perf1}}
          {{else}}
            <h4>Data not available to display Timeline!</h4>
          {{/if}}
          {{query-timeline-difflegend perf=perf2 perf1=perf1}}
       </div>
    </div>
  </div>

</div>