<div id="recommendations" class="target target1">
  <div class="recommendations-filter">
    {{input type="checkbox" checked=showDifference}} Show Differences
  </div>
  <div class="ruler-container">
    <div class="ruler-header">Recommendations - A</div>
    <br />
      <span class="hide">{{recommendationList1}}</span>
      {{#if loadingRecommendations1}}
          {{fa-icon "spinner fa-1-5 recommendationsLoader" spin=true}}
      {{else if isErrorWhileFetching1}}
        {{error-notification message="There is some problem while connecting to the server.Try again."}}
      {{else if filteredRecommendations.recommendations1}}
          {{#each filteredRecommendations.recommendations1 as |recommendation| }}
              <div class="ruler-row">{{recommendation.message}}</div>
          {{/each}}
      {{else}}
          <div class="ruler-row">No recommendations</div>
      {{/if}}
  </div>
  <div class="ruler-container">
    <div class="ruler-header">Recommendations - B</div>
    <br />
      <span class="hide">{{recommendationList2}}</span>
      {{#if loadingRecommendations2}}
          {{fa-icon "spinner fa-1-5 recommendationsLoader" spin=true}}
      {{else if isErrorWhileFetching2}}
        {{error-notification message="There is some problem while connecting to the server.Try again."}}
      {{else if filteredRecommendations.recommendations2}}
          {{#each filteredRecommendations.recommendations2 as |recommendation| }}
              <div class="ruler-row">{{recommendation.message}}</div>
          {{/each}}
      {{else}}
          <div class="ruler-row">No recommendations</div>
      {{/if}}
  </div>
</div>
