<div class="scroll-bar-container">
  {{#if dataProcessor.pageDetails.totalRecords}}
    {{#if scrollColumns.length}}
      <div class="scroll-thumb" style={{scrollThumbStyles}}></div>
    {{/if}}
    <div class="column-divisions">
      {{#each scrollColumns as |column index|}}
        <div class="column-division" style={{column.width}} title="{{column.definition.headerTitle}}" {{action "columnDivisionClicked" column.definition index}}></div>
      {{/each}}
    </div>
  {{/if}}
</div>

<div class="table-pagination">
  <div class="page-details">
    {{dataProcessor.pageDetails.fromRecord}} - {{dataProcessor.pageDetails.toRecord}} of {{dataProcessor.pageDetails.totalRecords}}
  </div>
  <div class="page-options">
    Show:
      <select onchange={{action "rowCountChanged" value="target.value"}}>
        {{#each tableDefinition.rowCountOptions as |rowCount| }}
          <option value={{rowCount}} selected={{eq rowCount tableDefinition.rowCount}}>
            {{rowCount}}
          </option>
        {{/each}}
      </select>
    Go: <input type="text" class="pagenum-text" value={{pageNum}} {{action "pageNumChanged" on="change"}}/>
  </div>

  <span class="prev-button" {{action "previousPage"}}>
    <i class="fa fa-chevron-left" aria-hidden="true"></i>
  </span>
  <span class="next-button" {{action "nextPage"}}>
    <i class="fa fa-chevron-right" aria-hidden="true"></i>
  </span>
</div>
