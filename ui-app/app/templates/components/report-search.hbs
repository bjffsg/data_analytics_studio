<div class="row">
    <div class="col-md-3">
        <div class="row">
            {{#if alldatabases}}
                <div class="database-list-container">
                    {{#power-select
                        options=alldatabases
                        selected=selectedDb
                        placeholder="Database"
                        searchField="name"
                        searchPlaceholder="Type the paramter"
                        onchange=(action "handleDbChange" ) as |filter| }}
                        {{fa-icon "database" size="lg"}}&nbsp;&nbsp;{{filter.name}}
                    {{/power-select}}
                </div>
            {{else}}
                Loading...
            {{/if}}
        </div>
    </div>

    <div class="col-md-2" >
            <div class="input-group-btn time-dropdown">
                <button type="button" class="btn btn-default dropdown-toggle range-filter-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  {{fa-icon "clock-o" size="lg"}}&nbsp;&nbsp;{{selectedDuration.name}} <span class="caret"></span>
                </button>
                <div class="dropdown-menu range-panel pull-right">
                  {{report-range-panel
                    allDurations=allDurations
                    primaryDuration=primaryDuration
                    secondaryDuration=secondaryDuration
                    handleDurationChange='handleDurationChange' }}
                </div>
            </div>
    </div>

    <div class="col-md-7 text-right" >
        <div class="row">
            {{#if isLoading}}
                {{fa-icon "spinner fa-1-5 middle-align compose-loader" spin=true}}
            {{/if}}
            {{input type="text" placeholder="Filter Table Names" class="form-control input-sm searchTable" key-up="throttleTyping" value=searchText }}
            &nbsp; <span class="search-icon" >{{fa-icon "search"}}</span>
        </div>
    </div>

</div>
{{yield}}
