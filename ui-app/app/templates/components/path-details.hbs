<div class="row">
  <div class="col-md-12">
    <div class="title">Join Details
      <div class="pull-right">
      <a href="javascript:void(0)" {{action "closePathSlider"}}>{{fa-icon "close"}}</a>
      </div>
    </div>
  </div>
</div>

<div class="col-md-12">
  {{#each pathJson as |pathJson|}}
    <div class="query-details-row">
      <label class="query-details-label">Left Table Name</label>
      <div class="query-details-value">{{pathJson.leftTableName}}</div>
    </div>
    
    <div class="query-details-row">
      <label class="query-details-label">Left Column Name</label>
      <div class="query-details-value">{{pathJson.leftColumnName}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">Right Table Name</label>
      <div class="query-details-value">{{pathJson.rightTableName}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">Right Column Name</label>
      <div class="query-details-value">{{pathJson.rightColumnName}}</div>
    </div>


    <div class="query-details-row">
      <label class="query-details-label">full Outer Join Count</label>
      <div class="query-details-value">{{pathJson.fullOuterJoinCount}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">inner Join Count</label>
      <div class="query-details-value">{{pathJson.innerJoinCount}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">left Outer Join Count</label>
      <div class="query-details-value">{{pathJson.leftOuterJoinCount}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">left Semi Join Count</label>
      <div class="query-details-value">{{pathJson.leftSemiJoinCount}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">right Outer Join Count</label>
      <div class="query-details-value">{{pathJson.rightOuterJoinCount}}</div>
    </div>

    <div class="query-details-row">
      <label class="query-details-label">total Join Count</label>
      <div class="query-details-value">{{pathJson.totalJoinCount}}</div>
    </div>

    <p><hr style="border-top: 1px solid #000;" /></p>
  {{/each}}
</div>
{{yield}}
