{{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true class="breadcrumbs-header"}}
<div class="pull-right header-menu">
  <span class="dropdown" style="display:inline-block">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-user fa-fw" style="color:black;padding-right:0px;width:7px;"></i>
      <i class="fa fa-caret-down"></i>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="left:auto; right:0">
      <li><a href="javascript:void(0);" {{action "showCloseDialog"}}> About</a></li>
    </ul>
  </span>
</div>

{{#if showAboutDetails}}
    {{prod-info
            title="Configurations"
            infoLabels=infoLabels
            productInfo=productInfo
            contextInfo=contextInfo
            closable=false
            apiAccessError=apiAccessError
            ok="closeAboutDialog"
            saveConnection=(action "saveConnection")
            resetConnection=(action "resetConnection")
    }}
{{/if}}
