<div class="dropdown jdbc-info" id="jdbcDrop" style="display:inline-block">
  <button class="btn btn-secondary dropdown-toggle" title="Global Information" type="button" id="dropdown-jdbc" aria-haspopup="true" data-toggle="dropdown" aria-expanded="false">
    <span class="fa fa-cog"></span>
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdown-jdbc" style="left:auto; right:0; width: 250px;" href="#">
    <div class="col-md-12 jdbc-panel">
      <div>
        <div class="form-group jdbc-url">
          <label for="jdbc-url">JDBC URL</label>
          {{textarea class="form-control" value=jdbcUrl rows=2 cols=2 placeholder="Enter JDBC URL"}}
        </div>
        <button type="button" class="btn btn-primary pull-right {{unless jdbcUrl 'disabled'}}" {{action "setJDBCURL" preventDefault=false}}>Connect</button>
      </div>
    </div>
  </div>
</div>

