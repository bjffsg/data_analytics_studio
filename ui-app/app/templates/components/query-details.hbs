  <div class="target detail-panel">
    <div class="row">
      <div class="col-md-12">
        <div class="title">Query Details - {{title}}</div>
      </div>
    </div>
    <div class="row" >
        <div class="col-md-12">
          <div class="query-details-row">
            <label class="query-details-label">Query ID</label>
            <div class="query-details-value">{{txt query.queryId}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">User</label>
            <div class="query-details-value">{{txt query.requestUser}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Status</label>
            <div class="query-details-value">{{em-table-status-cell content=query.status}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Start Time</label>
            <div class="query-details-value">{{date-formatter content=query.startTime}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">End Time</label>
            <div class="query-details-value">{{date-formatter content=query.endTime}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Duration</label>
            <div class="query-details-value">{{txt query.duration type="duration"}}</div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Tables Read</label>
            <div class="query-details-value">
              {{#if query.tablesReadWithDatabase}}
                {{query.tablesReadWithDatabase}}
              {{else}}
                <span class="txt-message"> Not Available! </span>
              {{/if}}
            </div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Tables Written</label>
            <div class="query-details-value">
              {{#if query.tablesWrittenWithDatabase}}
                {{query.tablesWrittenWithDatabase}}
              {{else}}
                <span class="txt-message"> Not Available! </span>
              {{/if}}
            </div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Application ID</label>
            <div class="query-details-value">
              {{#if query.dagInfo.applicationId}}
                {{query.dagInfo.applicationId}}
              {{else}}
                <span class="txt-message"> Not Available! </span>
              {{/if}}
            </div>
          </div>


          <div class="query-details-row">
            <label class="query-details-label">DAG ID</label>
            <div class="query-details-value">
              {{#if query.dagInfo.dagId}}
                {{query.dagInfo.dagId}}
              {{else}}
                <span class="txt-message"> Not Available! </span>
              {{/if}}
            </div>
          </div>


          <div class="query-details-row">
            <label class="query-details-label">Session ID</label>
            <div class="query-details-value">
              {{#if query.sessionId}}
                {{txt query.sessionId}}
              {{else}}
                <span class="txt-message"> Not Available! </span>
              {{/if}}
            </div>
          </div>

          {{#if query.llapAppId}}
            <div class="query-details-row">
              <label class="query-details-label">LLAP App ID</label>
              <div class="query-details-value">
                {{txt query.llapAppId}}
              </div>
            </div>
          {{/if}}

          <div class="query-details-row">
            <label class="query-details-label">Thread Id</label>
            <div class="query-details-value">
              {{txt query.threadId}}
            </div>
          </div>

          <div class="query-details-row">
            <label class="query-details-label">Queue</label>
            <div class="query-details-value">
              {{txt query.queueName}}
            </div>
          </div>
        </div>
    </div>
  </div>