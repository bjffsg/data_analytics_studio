<h5>Source Table Name: {{selectedTable.name}}</h5>
<div class="form-group required">
  <label>Destination Table Name</label>
  {{input class="form-control" value=selectedTable.destinationTableName}}
</div>

<div class="schema-table">
  <div class="schema-hr">
    <div class="schema-td"> </div>
    <div class="schema-td">Name</div>
    <div class="schema-td">Type</div>
    <div class="schema-td">Sample</div>
  </div>
  {{#each selectedTable.columns as |column index|}}
    <div class="schema-tr">
      <div class="schema-td">{{inc index}}</div>
      <div class="schema-td">
        <span class="dummy">{{column.name}}</span>
        {{input class="column-name" value=column.name}} <i class="fa fa-pencil"></i>
      </div>
      <div class="schema-td">
        <span class="dummy">{{column.type}}</span>
        <select onchange={{action (mut column.type) value="target.value"}}>
          {{#each dataTypes as |type|}}
            <option value={{type}} selected={{eq column.type type}}>{{type}}</option>
          {{/each}}
        </select>
        <i class="fa fa-caret-down"></i></div>
      <div class="schema-td">{{column.sample}}</div>
    </div>
  {{/each}}
</div>
